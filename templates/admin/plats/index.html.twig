{% extends 'base.html.twig' %}

{% block title 'Gérer les plats'  %}

{% block body %}

<div class="container mt-4">
  <h1>Gérer les plats</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nom Plat</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
    {% for plats in recettes %}
      <tr>
        <td>{{ plats.NomRecette}}</td>
        <td>
<a href="{{path('admin.recette.edit',{id: plats.id})}}" class="btn btn-secondary">Editer</a>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>







{% endblock %}
